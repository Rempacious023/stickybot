<!DOCTYPE html>
<html>
<head>
    <title>StickyBot Configuration Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 800px;
            margin: 40px auto;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 0 20px;
        }
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        h1 {
            color: #333;
            text-align: center;
            margin-top: 0;
        }
        .status {
            background: #e8f5e9;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
            border-left: 4px solid #4caf50;
        }
        .status p {
            margin: 5px 0;
            color: #2e7d32;
        }
        .form-group {
            margin-bottom: 20px;
        }
        label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }
        input[type="text"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: monospace;
            box-sizing: border-box;
            font-size: 14px;
        }
        textarea {
            resize: vertical;
            min-height: 80px;
        }
        input[type="number"] {
            font-family: Arial, sans-serif;
        }
        .help-text {
            font-size: 12px;
            color: #666;
            margin-top: 5px;
        }
        button {
            background: #667eea;
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            transition: background 0.3s;
        }
        button:hover {
            background: #764ba2;
        }
        button:active {
            background: #5a67d8;
        }
        .message {
            padding: 15px;
            border-radius: 5px;
            margin-top: 15px;
            display: none;
        }
        .message.success {
            background: #c8e6c9;
            color: #2e7d32;
            border-left: 4px solid #4caf50;
            display: block;
        }
        .message.error {
            background: #ffcdd2;
            color: #c62828;
            border-left: 4px solid #f44336;
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>ü§ñ StickyBot Configuration</h1>
        
        <div class="status">
            <p><strong>Bot Status:</strong> Connected and Running</p>
            <p><strong>Dashboard Token:</strong> ‚úÖ Secure (Configured via environment)</p>
        </div>

        <form id="configForm">
            <div class="form-group">
                <label for="stickyMessage">üìù Sticky Message:</label>
                <textarea id="stickyMessage" name="stickyMessage" required></textarea>
                <div class="help-text">The message that will be posted to channels</div>
            </div>

            <div class="form-group">
                <label for="channelIds">üìÇ Channel IDs:</label>
                <textarea id="channelIds" name="channelIds" placeholder="123456789,987654321,111222333"></textarea>
                <div class="help-text">Comma-separated Discord channel IDs where messages will be posted</div>
            </div>

            <div class="form-group">
                <label for="tickInterval">‚è±Ô∏è Tick Interval (ms):</label>
                <input type="number" id="tickInterval" name="tickInterval" min="1000" step="1000" required>
                <div class="help-text">Milliseconds between processing cycles (minimum 1000ms)</div>
            </div>

            <div class="form-group">
                <label for="postInterval">‚è≤Ô∏è Post Interval per Channel (ms):</label>
                <input type="number" id="postInterval" name="postInterval" min="500" step="500" required>
                <div class="help-text">Milliseconds between posts to each channel</div>
            </div>

            <button type="submit">üíæ Update Configuration</button>
        </form>

        <div id="message" class="message"></div>
    </div>

    <script>
        // Load configuration on page load
        window.addEventListener('DOMContentLoaded', loadConfig);

        async function loadConfig() {
            try {
                const response = await fetch('/api/config');
                const config = await response.json();
                
                document.getElementById('stickyMessage').value = config.stickyMessage || '';
                document.getElementById('channelIds').value = config.channelIds ? config.channelIds.join(', ') : '';
                document.getElementById('tickInterval').value = config.tickInterval || 60000;
                document.getElementById('postInterval').value = config.postInterval || 60000;
            } catch (error) {
                console.error('Failed to load config:', error);
                showMessage('Failed to load configuration', 'error');
            }
        }

        document.getElementById('configForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const formData = new FormData(e.target);
            const config = {
                stickyMessage: formData.get('stickyMessage'),
                channelIds: formData.get('channelIds'),
                tickInterval: formData.get('tickInterval'),
                postInterval: formData.get('postInterval')
            };

            try {
                const response = await fetch('/api/config', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: new URLSearchParams(config)
                });
                
                const result = await response.json();
                if (result.success) {
                    showMessage('‚úÖ Configuration updated successfully!', 'success');
                } else {
                    showMessage('‚ùå Failed to update configuration', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showMessage('‚ùå Error updating configuration: ' + error.message, 'error');
            }
        });

        function showMessage(text, type) {
            const msgEl = document.getElementById('message');
            msgEl.textContent = text;
            msgEl.className = 'message ' + type;
            setTimeout(() => {
                msgEl.className = 'message';
            }, 5000);
        }
    </script>
</body>
</html>
